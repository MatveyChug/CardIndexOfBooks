<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/back"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="Картотека книг"
        android:textColor="#8E5DD5"
        android:textSize="19sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/inputName"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_marginTop="60dp"
        android:background="#151515"
        android:ems="10"
        android:gravity="center"
        android:hint="Введите название книги"
        android:inputType="textPersonName"
        android:textColor="#8E5DD5"
        android:textColorHint="#8E5DD5"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/header" />

    <EditText
        android:id="@+id/inputAuthor"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_marginTop="76dp"
        android:background="#151515"
        android:ems="10"
        android:gravity="center"
        android:hint="Введите название книги"
        android:inputType="textPersonName"
        android:textColor="#8E5DD5"
        android:textColorHint="#8E5DD5"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/inputName" />

    <Button
        android:id="@+id/button"
        android:layout_width="320dp"
        android:layout_height="65dp"
        android:layout_marginTop="76dp"
        android:backgroundTint="#8E5DD5"
        android:text="Добавить в картотеку"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/inputAuthor" />

    <TextView
        android:id="@+id/output"
        android:layout_width="320dp"
        android:layout_height="250dp"
        android:layout_marginTop="76dp"
        android:background="#151515"
        android:gravity="top"
        android:hint="Картотека"
        android:padding="10sp"
        android:textColor="#8E5DD5"
        android:textColorHint="#8E5DD5"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/button" />


</androidx.constraintlayout.widget.ConstraintLayout>